<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Facebook React</title>
        
        <link rel="shortcut icon" href="~/assets/ico/favicon.ico">
        
        <!-- Bootstrap core CSS -->
        <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
        
        <!-- Custom styles for this template -->
        <link href="~/assets/css/custom.css" rel="stylesheet" media="screen">
        
        <script src="~/assets/js/react-0.4.1.min.js"></script>
        <script src="~/assets/js/JSXTransformer-0.4.1.js"></script>
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="../../assets/js/html5shiv.js"></script>
        <script src="../../assets/js/respond.min.js"></script>
        <![endif]-->
    </head>
<body>
    @{
        var url = Request.Url.ToString().ToLower();
        var page = url.Substring(url.LastIndexOf("/") + 1);
    }

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Facebook React</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="@(page == "" ? "active" : "")"><a href="@Url.Action("HelloWorldJsx", "Home")">Hello World (JSX)</a></li>
                <li class="@(page == "helloworldnojsx" ? "active" : "")"><a href="@Url.Action("HelloWorldNoJsx", "Home")">Hello World (Wihtout JSX)</a></li>
                <li class="@(page == "component" ? "active" : "")"><a href="@Url.Action("Component", "Home")">Component</a></li>
                <li class="@(page == "statefulcomponent" ? "active" : "")"><a href="@Url.Action("StatefulComponent", "Home")">Stateful Component</a></li>
                <li class="@(page == "multiplecomponents" ? "active" : "")"><a href="@Url.Action("MultipleComponents", "Home")">Multiple Components</a></li>
                <li class="@(page == "application" ? "active" : "")"><a href="@Url.Action("Application", "Home")">Application</a></li>
            </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    
    <div id="mountNode" class="container">
        @RenderBody()
    </div>
    
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/assets/js/jquery.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/showdown.js"></script>
    <script type="text/jsx">
        @RenderSection("JavaScript", required: false)
    </script>
</body>
</html>
